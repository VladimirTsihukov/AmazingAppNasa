<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_list_notes"
        style="@style/style_toolBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/list_notes" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_view_notes_list"
        android:layout_width="0dp"
        android:background="@color/color_gray"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_list_notes" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/action_bar_add_notes"
        android:layout_margin="@dimen/margin_middle"
        android:layout_width="wrap_content"
        app:backgroundTint="?attr/backgroundFloatingActionButton"
        android:src="@drawable/ic_plus_fab"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>