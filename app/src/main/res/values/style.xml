<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_text_header">
        <item name="android:layout_marginTop">@dimen/margin_xx_small</item>
        <item name="android:paddingEnd">@dimen/padding_small</item>
        <item name="android:paddingStart">@dimen/padding_small</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="style_text_normal">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingEnd">@dimen/padding_small</item>
        <item name="android:paddingStart">@dimen/padding_small</item>
    </style>

    <style name="style_sheet_line">
        <item name="android:layout_height">@dimen/padding_very_small</item>
        <item name="android:layout_width">@dimen/width_sheet_line</item>
        <item name="android:layout_marginTop">@dimen/margin_xx_small</item>
        <item name="android:background">@color/color_sheet_line</item>
    </style>

    <style name="style_chips" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="style_toolBar" >
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="titleTextColor">?attr/colorMenuTool</item>
        <item name="android:background">?backgroundNavigationLayout</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>