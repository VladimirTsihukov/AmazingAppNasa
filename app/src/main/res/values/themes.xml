<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Nasa" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_blue_primary_nasa</item>
        <item name="colorPrimaryVariant">@color/color_blue_dark_nasa</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="backgroundNavigationLayout">@color/color_blue_light_nasa</item>
        <item name="backgroundFloatingActionButton">@color/color_red</item>
        <item name="colorSurface">@color/color_blue_primary_nasa</item>
    </style>

    <style name="Mars" parent="Nasa">
        <item name="colorPrimary">@color/color_orange_primary_mars</item>
        <item name="colorPrimaryVariant">@color/color_orange_dark_mars</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundNavigationLayout">@color/color_orange_light_mars</item>
        <item name="backgroundFloatingActionButton">@color/color_orange_dark_mars</item>
        <item name="colorSurface">@color/color_orange_primary_mars</item>
    </style>

    <style name="Moon" parent="Nasa">
        <item name="colorPrimary">@color/color_grey_primary_moon</item>
        <item name="colorPrimaryVariant">@color/color_grey_dark_moon</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundNavigationLayout">@color/color_grey_light_moon</item>
        <item name="backgroundFloatingActionButton">@color/color_grey_dark_moon</item>
        <item name="colorSurface">@color/color_grey_primary_moon</item>
    </style>
</resources>